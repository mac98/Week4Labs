<Window x:Class="Week4Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week4Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="23" Margin="46,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="FirstNameTextBox_TextChanged"/>
        <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" Height="24" Margin="46,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="FirstNameLabel" Content="First Name" HorizontalAlignment="Left" Margin="46,38,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LastNameLabel" Content="Last Name" HorizontalAlignment="Left" Margin="46,102,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PigLatinButton" Content="Click to Pig-Latinify Name" HorizontalAlignment="Left" Margin="30,168,0,0" VerticalAlignment="Top" Width="150" Click="PigLatinButton_Click"/>

    </Grid>
</Window>
